{
  "compilerOptions": {
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": ["./src/**/*"]
}